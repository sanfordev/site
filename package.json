{
  "name": "develop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run postbuild",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "simple-git-hooks",
    "pre-commit": "lint-staged",
    "analyze": "ANALYZE=true next build",
    "analyze:windows": "set ANALYZE=true && next build",
    "netlify-build": "npm run build",
    "typescript": "tsc --noEmit",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "postinstall": "test -n \"$NETLIFY\" && npm i sharp@latest || echo 'Skipping sharp installation'",
    "postbuild": "cp -r .next/static .next/standalone/.next/ && cp -r public .next/standalone/"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.0",
    "@netlify/plugin-nextjs": "^5.10.3",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.6.2",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.485.0",
    "markdown-to-jsx": "^7.7.4",
    "next": "14.2.26",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.55.0",
    "sonner": "^2.0.3",
    "sugar-high": "^0.9.3",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^14.2.26",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.17.30",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.26",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "tailwindcss": "^4.0.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run pre-commit",
    "pre-push": "npm run type-check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
